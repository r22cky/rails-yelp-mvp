<h1 class="text-center">Add your review</h1>

<div class="wrapper text-center">
  <h2>What did you think of <%= @restaurant.name %></h2>
  <div class="container">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="card">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, as: :select, collection: [1,2,3,4,5] %>
        <%= f.submit "Add review", class: "btn btn-success" %>
      <% end %>
      </div>
      <%= link_to "Cancel", restaurants_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
